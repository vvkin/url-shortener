{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["*"],
      "@database": ["database/*"],
      "@config/*": ["config/*"],
      "@domain/*": ["domain/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
